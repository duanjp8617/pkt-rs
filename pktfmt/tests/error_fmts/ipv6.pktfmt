packet Ipv6 {
    header = [
        version = Field{bit = 4, default = 6}, 
        traffic_class = Field{bit = 8},
        flow_label = Field {bit = 20},
        payload_len_ = Field{
            bit = 16,
            default = 0,
            gen = false
        },
        next_header = Field{bit = 8, arg = %%IpProtocol%%, default = %%IpProtocol::UDP%%},
        hop_limit = Field{bit = 8},
        src_addr = Field{bit = 128, arg = %%Ipv6Addr%%, default = %%Ipv6Addr::default()%%},
        dst_addr = Field{bit = 128, arg = %%Ipv6Addr%%, default = %%Ipv6Addr::default()%%},
    ],
    payload_len = PayloadLen {
        expr = payload_len_,
        min = 20
    }
}