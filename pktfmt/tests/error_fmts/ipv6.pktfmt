packet Ipv6 {
    header = [
        version_ = Field{bit = 4, default = 6}, 
        traffic_class_ = Field{bit = 8},
        flow_label_ = Field {bit = 20},
        payload_len_ = Field{
            bit = 16,
            default = 0,
            gen = false
        },
        next_header_ = Field{bit = 8, arg = %%IpProtocol%%, default = %%IpProtocol::UDP%%},
        hop_limit_ = Field{bit = 8},
        src_addr_ = Field{bit = 128, arg = %%Ipv6Addr%%, default = %%Ipv6Addr::default()%%},
        dst_addr_ = Field{bit = 128, arg = %%Ipv6Addr%%, default = %%Ipv6Addr::default()%%},
    ],
    payload_len = PayloadLen {
        expr = payload_len_
    }
}