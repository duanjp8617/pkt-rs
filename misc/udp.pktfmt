%%

packet Udp {
    header = [
        src_port = Field {bit = 16},
        dst_port = Field {bit = 16},
        length = Field {
            bit = 16,
            default = 8,
            gen = false,
        },
        checksum = Field {bit = 16},
    ],
    with_payload = true,
    packet_len = PacketLen {
        expr = length,
        mult = 1,
        min = 8,
        max = 65535,
    }
}

